<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:controls="clr-namespace:Client.UI.Controls">

    <Style TargetType="{x:Type controls:PlayerDetailCard}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:PlayerDetailCard}">
                    <Grid>
                        <Border
          Name="Card"
          Margin="8"
          Background="#CC1A1D23"
          CornerRadius="8">
                            <Grid
              VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <!--Card Headers-->
                                <Grid
                  Grid.Row="0"
                  Margin="10"
                  Height="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Border
                      Grid.Column="0"
                      Height="20"
                      Width="3"
                      CornerRadius="3"
                      Background="#FFE5484D" />
                                    <Grid Grid.Column="1">
                                        <ui:TextBlock
                          Foreground="#FFFFFF"
                          Text="{TemplateBinding CardName}" />
                                    </Grid>
                                </Grid>
                                <!--Card Content-->
                                <Grid Grid.Row="1" Margin="20,5,0,0">
                                    <ContentPresenter Content="{TemplateBinding CardContent}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="CardContent" Value="{x:Null}">
                            <Setter TargetName="Card" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>