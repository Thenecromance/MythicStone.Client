<Page x:Class="Client.UI.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Client.UI.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"

      Title="Dashboard Page"
      d:DataContext="{d:DesignInstance local:DashboardPage,
                                 IsDesignTimeCreatable=False}"
      d:DesignHeight="650"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <!-- Title -->
            <Border
                Grid.Row="0"
                Height="200"
                CornerRadius="8">
                <Border.Background>
                    <ImageBrush
                        ImageSource="../../Assets/main_page_bg.png"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Stretch="UniformToFill" />
                </Border.Background>

                <Border CornerRadius="8">
                    <Grid>
                        <StackPanel
                            Margin="48,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <ui:TextBlock
                                FontTypography="Title"
                                Foreground="#FFFFFF"
                                Text="Mythic Stone Plus" />
                            <ui:TextBlock
                                FontTypography="Subtitle"
                                Foreground="#B7FFFFFF"
                                Text="国服大秘境数据" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Border>

            <Grid Grid.Row="1" Margin="0,24,0,0">
                <StackPanel>


                    <ui:CardAction
                        Margin="0,0,4,0"
                        Padding="0"
                        VerticalAlignment="Stretch"
                        Command="{Binding ViewModel.CardClickCommand, Mode=OneWay}"
                        CommandParameter="PlayerSearch"
                        IsChevronVisible="False">

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Text="玩家查询（国服）"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="基础数据,大米分数,wowop评分,该战网账号最高分数"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>

                        </Grid>
                    </ui:CardAction>

                    <ui:CardAction
                        Margin="0,0,4,0"
                        Padding="0"
                        VerticalAlignment="Stretch"
                        IsChevronVisible="False">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Text="大秘境黑名单"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="只要拉进黑名单,除非换新的战网账号"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                        </Grid>
                    </ui:CardAction>

                    <ui:CardAction
                        Margin="0,0,4,0"
                        Padding="0"
                        VerticalAlignment="Stretch"
                        IsChevronVisible="False">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Text="匹配系统"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="暂时先别想了，我服务器撑不住...."
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                        </Grid>
                    </ui:CardAction>

                    <ui:CardAction
                        Margin="0,0,4,0"
                        Padding="0"
                        VerticalAlignment="Stretch"
                        IsChevronVisible="False">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="1"
                                Margin="24"
                                VerticalAlignment="Center">
                                <ui:TextBlock
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Text="SimulationCraft(过几天再上）"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Appearance="Secondary"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="raidbots能做的这里都能做~本地跑，唯一的限制就是你的电脑的性能"
                                    TextWrapping="WrapWithOverflow" />
                            </StackPanel>
                        </Grid>
                    </ui:CardAction>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>