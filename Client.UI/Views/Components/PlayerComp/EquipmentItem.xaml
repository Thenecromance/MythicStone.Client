<UserControl x:Class="Client.UI.Views.Components.PlayerComp.EquipmentItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.UI.Views.Components.PlayerComp"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
            Background="#FFAB02DB"
            Height="30"
            Width="30"
        ToolTipService.InitialShowDelay="100"
ToolTipService.Placement="MousePoint"
        >
        <ToolTipService.ToolTip>

            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="https://wow.res.netease.com/xt/manage/20241220/0d0b25603280ef891c46a074bdc1b470_0d0b25.jpg" Stretch="None"/>
                <TextBlock Grid.Column="1" TextWrapping="Wrap" 
                      Text="这是包含复杂布局的自定义提示信息"/>
            </Grid>
        </ToolTipService.ToolTip>
        <Image
                Margin="2"
                Source="https://wow.res.netease.com/xt/manage/20241220/0d0b25603280ef891c46a074bdc1b470_0d0b25.jpg" />
    </Border>
</UserControl>
