<UserControl x:Class="Client.UI.Views.Components.PlayerComp.TitleBarComp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Client.UI.Views.Components.PlayerComp"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             x:Name="Root">
    <Border
        Height="100"
        VerticalAlignment="Top"
        Margin="58,48,0,0"
        CornerRadius="8">

        <Border CornerRadius="8">
            <Grid>
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent">
                    <ui:TextBlock
                        FontTypography="Title"
                        Foreground="#FFFFFF"
                        Text="{Binding PlayerName, ElementName=Root}" />
                    <ui:TextBlock
                        FontTypography="Subtitle"
                        Foreground="#B7FFFFFF"
                        Margin="150,0,0,0"
                        Text="{Binding RealmName, ElementName=Root}" />
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</UserControl>