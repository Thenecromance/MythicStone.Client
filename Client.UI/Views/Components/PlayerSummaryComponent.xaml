<UserControl x:Class="Client.UI.Views.Components.PlayerSummaryComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:pg="clr-namespace:Client.UI.Views.Pages"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:comp="clr-namespace:Client.UI.Views.Components"
             ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
             ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
             d:DataContext="{
             d:DesignInstance comp:PlayerSummaryComponent,
              IsDesignTimeCreatable=True}"

             d:DesignWidth="800"
             x:Name="Root"
             mc:Ignorable="d">
    <StackPanel Margin="24,0.5,24,0">
        <ui:CardControl Padding="20,10,20,10" Header="基础数据">
            <ui:CardControl.Content>
                <ui:Button Content="详细数据" />
            </ui:CardControl.Content>
        </ui:CardControl>
        <ui:CardControl
            Margin="0,0.5,0,0"
            Padding="20,10,20,10">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <!-- M+ Score-->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock
                                    Grid.Column="0"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="大秘境分数"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Grid.Column="1"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Rating}"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </StackPanel>
                        <!-- WowOp Score-->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock
                                    Grid.Column="0"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="WowOp分数"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Grid.Column="1"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding OpScore }"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </StackPanel>
                        <!-- 装备等级 Score-->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock
                                    Grid.Column="0"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="装备等级"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Grid.Column="1"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding ItemLevel}"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <!-- M+ Score-->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock
                                    Grid.Column="0"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="职业"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Grid.Column="1"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Class , Converter={StaticResource IndexToClassNameConverter}}"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </StackPanel>
                        <!-- WowOp Score-->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock
                                    Grid.Column="0"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="专精"
                                    TextWrapping="WrapWithOverflow" />
                                <ui:TextBlock
                                    Grid.Column="1"
                                    Margin="0"
                                    FontTypography="BodyStrong"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Text="{Binding Spec}"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ui:CardControl.Header>
        </ui:CardControl>
    </StackPanel>
</UserControl>